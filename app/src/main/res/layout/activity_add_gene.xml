<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar_add_gene" />

    <TextView
        android:id="@+id/gene_language"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/activity_add_gene_language"
        android:textColor="@color/color_text_gene"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_divider" />

    <TextView
        android:id="@+id/gene_skill"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/activity_add_gene_skill"
        android:textColor="@color/color_text_gene"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_divider" />

    <include
        android:id="@+id/add_gene_progressbar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        layout="@layout/view_progressbar"/>

</LinearLayout>